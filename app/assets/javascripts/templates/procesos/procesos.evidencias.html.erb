<div ng-controller='procesoEvidencesController' >

  <section ng-show="loading_proceso" class="content-header">
    <center><%=image_tag("loading.gif")%></center>
  </section>
   
  <section ng-if='!loading_proceso && proceso.id' class="col-lg-12 col-xs-12">
    <div class="box box-solid bg-teal-gradient">
      <div class="box-header">
          <div class="btn-group pull-right box-tools">
            <button type="button" class="btn bg-teal btn-sm pull-right dropdown-toggle" data-toggle="dropdown">
              <i class="fa fa-angle-down"></i>
            </button>
            <ul class="dropdown-menu " role="menu">
              <li><a href="#">Nueva evidencia</a></li>
            </ul>
          </div>
        <i class="fa fa-th"></i>
      </div>
      <div class="box-body border-radius-none">
        <div class="chart" style="min-height:45px">
          <center>{{proceso.nombre}}</center>
        </div>                                    
      </div><!-- /.box-body -->
      <div class="box-footer no-border">
        <div class="row">
          <div class="col-xs-4 text-center" style="border-right: 1px solid #f4f4f4">
            <div style="color:#39cccc">
              <strong>{{proceso.total_evidencias}}</strong>
            </div>
            <div class="knob-label">Evidencias</div>
          </div><!-- ./col -->
          <div class="col-xs-4 text-center" style="border-right: 1px solid #f4f4f4">
            <div style="color:#39cccc">
              <strong>%</strong>
            </div>
            <div class="knob-label">Cumplimiento</div>
          </div><!-- ./col -->
        </div><!-- /.row -->
      </div><!-- /.box-footer -->

      <div class="box-footer no-border" ng-if='proceso.total_evidencias && proceso.total_evidencias != 0'>
        <div class="row">
          <div class="col-xs-12">
            <div class="box box-info" style='color:black'>
              <div class="box-header">
                <h3 class="box-title">Listado de evidencias</h3>
                <div class="box-tools">
                  <div class="input-group">
                    <input type="text" name="table_search" class="form-control input-sm pull-right" style="width: 150px;" placeholder="Search"/>
                    <div class="input-group-btn">
                      <button class="btn btn-sm btn-default"><i class="fa fa-search"></i></button>
                    </div>
                  </div>
                </div>
              </div><!-- /.box-header -->
              <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                  <tr>
                    <th>ID</th>
                    <th>EVIDENCIAS CONEAU Y SGIC</th>
                    <th>FECHA DE REGISTRO</th>
                    <th>Status</th>
                    <th></th>
                  </tr>
                  <tr ng-repeat="evidence in evidences">
                    <td>{{evidence.id}}</td>
                    <td>{{evidence.nombre}}</td>
                    <td>11-7-2014</td>
                    <td><span class="label label-success">Approved</span></td>
                    <td></td>
                  </tr>
                </table>
              </div><!-- /.box-body -->
            </div><!-- /.box -->
          </div>
        </div>
      </div>
      
    </div>    
  </section>    
</div>

