<aside class="right-side">
  <!--if-->

  <section ng-show="loading_area" class="content-header">
    <center><%=image_tag("loading.gif")%></center>
  </section>
  <!--else-->
  <section ng-if='!loading_area && area.id' ng-include src="'auditorias/_navigation.html'"  class="content-header">
  </section>
      <!-- Main content -->
  <section ng-if='!loading_area && area.id' class="content">
    <div class='row'>
      <section class="col-lg-12">
        <div class="nav-tabs-custom" style="cursor: move;">
          <ul class="nav nav-tabs pull-right">
            <li class="pull-left header"><i class="fa fa-pencil-square-o"></i> Auditorias</li>
            <li ng-class="{'active': state == 'auditorias'}"><a href ng-click='listarAuditorias()' data-toggle="tab">Listado</a></li>
            <li ng-class="{'active': state == 'auditorias.new'}"><a href ng-click='nuevaAuditoria()' data-toggle="tab">Nueva auditoria</a></li>            
          </ul>
        </div>
      </section>  
    </div>
    <div class="row">
      <div ng-switch on="state"> 
        <div ng-switch-when="auditorias">
          <div ng-include src="'auditorias/auditorias.list.html'"></div>
        </div>
        <div ng-switch-when="auditorias.new">
          <div ng-include src="'auditorias/auditorias.new.html'"></div>
        </div>
        <div ng-switch-when="auditoria.evaluaciones_iniciales">
          <div ng-include src="'auditorias/auditoria.evaluaciones_iniciales.html'"></div>
        </div>
        <div ng-switch-when="auditoria.evaluaciones_cumplimiento">
          <div ng-include src="'auditorias/auditoria.evaluaciones_cumplimiento.html'">
          </div>
        </div>
      </div>      
    </div>
  </section>
</aside>

